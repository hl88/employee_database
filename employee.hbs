<div class="row">
    <div class="col-md-12">
        <!-- renders first name, last name and employee number in h2 tag -->
        <h2>{{employee.firstName}} {{employee.lastName}} - Employee: {{employee.employeeNum}}</h2>
        <hr />
        <form method="post" action="/employee/update">

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <!-- renders first name -->
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{employee.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <!-- renders last name -->
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{employee.lastName}}" />
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <!-- renders email -->
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="email" value="{{employee.email}}" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <!-- renders social security number -->
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{employee.SSN}}" readonly/>
                        </div>
                    </div>
                </div>

                <!-- renders hidden employee number -->
                <input class="form-control" id="employeeNum" name="employeeNum" type="hidden" value="{{employee.employeeNum}}" />

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders street address  -->
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{employee.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders city -->
                            <label for="addressCity">Address (City):</label>
                            <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{employee.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders state -->
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressState" name="addressState" type="text" value="{{employee.addressState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders zip code -->
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{employee.addressPostal}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders if is a manager -->
                            <label for="isManager">Manager:</label>
                            <input class="form-control" id="isManager" name="isManager" type="checkbox" value="{{employee.isManager}}" {{#if employee.isManager}}checked{{/if}}/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders manager's number -->
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{employee.employeeManagerNum}}"
                            />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders status (full time or part time) -->
                            <label for="status">Status:</label>
                            <br>
                            <label class="checkbox-inline">
                                <input id="statusFT" name="status" type="radio" {{#equal employee.status "Full Time" }}checked{{/equal}} value="Full Time"
                                /> Full Time</label>
                            <label class="checkbox-inline">
                                <input id="statusPT" name="status" type="radio" {{#equal employee.status "Part Time" }}checked{{/equal}} value="Part Time"
                                /> Part Time</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <!-- renders department -->
                            <label for="department">Department:</label>
                            <select class="form-control" name="department" id="department">
                                <option {{#equal employee.department "1" }}selected{{/equal}} value="1">Creative Services</option>
                                <option {{#equal employee.department "2" }}selected{{/equal}} value="2" selected>Product Development</option>
                                <option {{#equal employee.department "3" }}selected{{/equal}} value="3">Marketing</option>
                                <option {{#equal employee.department "4" }}selected{{/equal}} value="4">Strategic Planning</option>
                                <option {{#equal employee.department "5" }}selected{{/equal}} value="5">Accounting</option>
                                <option {{#equal employee.department "6" }}selected{{/equal}} value="6">Human Resources</option>
                                <option {{#equal employee.department "7" }}selected{{/equal}} value="7">Quality Analysis</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <!-- renders hire date -->
                            <label for="hireDate">Hire Date:</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{employee.hireDate}}" readonly>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" />
            <br />
            <br />
            <br />
        </form>
    </div>
</div>