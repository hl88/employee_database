<div class="row">
    <div class="col-md-12 table-responsive">
        <h2>Departments</h2>
        <hr />
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Department&nbsp;Number</th>
                    <th>Department&nbsp;Name</th>
                </tr>
            </thead>
            <!-- iterates over departments and renders department ID and department name -->
            <tbody>
                {{#each departments}}
                <tr>
                    <td>
                        <a href="/employees?department={{departmentId}}">
                            {{departmentId}}
                        </a>
                    </td>
                    <td>
                        <a href="/employees?department={{departmentId}}">
                            {{departmentName}}
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>