<div class="row">
    <div class="col-md-12">
        <h2>Images</h2>
        <hr />
    </div>
    <!-- iterates over images array to show each image -->
    {{#each images}}
    <div class="col-md-4">
        <img src="/images/uploaded/{{this}}" class="img-responsive img-thumbnail" />
    </div>
    <!-- if no images, then following message is displayed -->
    {{else}}
    <div class="col-md-12 text-center">
        <strong>No Images Available</strong>
    </div>
    {{/each}}
</div>